{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Confluent.Kafka": "Error"
    }
  },
  "Kafka": {
    "BootstrapServers": "localhost:9093",
    "Topics": {
      "OrderCreated": "test-order-created",
      "OrderUpdated": "test-order-updated",
      "OrderCancelled": "test-order-cancelled"
    },
    "Producer": {
      "Acks": "Leader",
      "Retries": 0,
      "EnableIdempotence": false,
      "BatchSize": 1,
      "LingerMs": 0,
      "CompressionType": "None",
      "MaxInFlight": 1
    }
  }
}